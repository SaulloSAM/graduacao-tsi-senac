@model IEnumerable<WebAppEcommerce.Models.Produto>

@{
    ViewBag.Title = "Lista";
}

<h2>Lista</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nomeProduto) <!--DisplayNameFor mostra o nome do campo-->
        </th>
        <th>
            @Html.DisplayNameFor(model => model.descProduto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.precProduto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.descontoPromocao)
        </th>
 
        <th>
            @Html.DisplayNameFor(model => model.imagem)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Categoria.nomeCategoria)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Usuario.loginUsuario)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nomeProduto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.descProduto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.precProduto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.descontoPromocao)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.imagem)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Categoria.nomeCategoria)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.estoque.idProduto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Usuario.loginUsuario)
        </td>
        <td>

            @Html.ActionLink("Details", "Details", new { id=item.idProduto }) 
        
        </td>
    </tr>
}

</table>
