@model WebAppEcommerce.Models.Checkout

@{
    ViewBag.Title = "Pagamento";
}

<section class="row" id="checkout" style="margin-top:40px;margin-bottom:20px">
    <div class="col-md-2"></div>
    <div class="wrap col-md-7">
        <div id="content-checkout-form" class="content-form">
            @using (Html.BeginForm())
            {
                <h2>Efetuar Pagamento</h2><br/><br />

                @Html.ValidationSummary(true)

                <div class="form-item">
                    <div><b>Nome do titular do cartão:</b></div>
                    @Html.TextBoxFor(model => model.NomeImpresso, new { @placeholder = "Nome do titular do cartão", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.NomeImpresso)
                </div><br/>

                <div class="form-item">
                    <div><b>Número do cartão:</b></div>
                    @Html.TextBoxFor(model => model.NumeroCartao, new { @placeholder = "Número do cartão", @class = "form-control", maxlength = "16" })
                    @Html.ValidationMessageFor(model => model.NumeroCartao)
                </div><br />

                <div class="form-item">
                    <div><b>Data de vencimento:</b></div>
                    @Html.TextBoxFor(model => model.Vencimento, new { @placeholder = "Data de Vencimento", @class = "form-control form-control-type-2", type = "month" })
                    @Html.ValidationMessageFor(model => model.Vencimento)
                </div><br />

                <div class="form-item">
                    <div><b>Código de Segurança:</b></div>
                    @Html.TextBoxFor(model => model.CodSeguranca, new { @placeholder = "Código de Segurança", @class = "form-control form-control-type-2", maxlength = "3" })
                    @Html.ValidationMessageFor(model => model.CodSeguranca)
                </div><br />

                <div class="form-item">
                    <div><b>Valor:</b></div>
                    @Html.TextBoxFor(model => model.Valor, new { @placeholder = "Valor", @class = "form-control form-control-type-2", @disabled = "disabled" })
                    @Html.ValidationMessageFor(model => model.Valor)
                </div><br />

                <div class="form-item">
                    <div><b>Parcelas:</b></div>
                    @Html.TextBoxFor(model => model.Parcelas, new { @placeholder = "Quantidade de parcelas", @class = "form-control form-control-type-2", type = "number", max = "12" })
                    @Html.ValidationMessageFor(model => model.Parcelas)
                </div><br />
                <div class="col-md-5"></div>
                <div class="form-item">                    
                    <button type="submit" class="btn btn-type-1" id="botaoFinal">Finalizar compra</button>
                </div>
            }
        </div>
    </div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}